@model UserAddDto

<div class="content-wrapper">


	<div class="container-xxl flex-grow-1 container-p-y">


		<h4 class="fw-bold py-3 mb-4">
			<span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Ekle
		</h4>

		<div class="row">
			<div class="col-md-12">
				<div class="card mb-4">
					<h5 class="card-header"></h5>
					<form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
						<div asp-validation-summary="All" style="color:red "></div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="FirstName" for="defaultFormControlInput" class="form-label">Kullanıcı İsmi</label>
								<input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Kullanıcı ismi giriniz" aria-describedby="defaultFormControlHelp">

							</div>
							<div class="form-group">
								<label asp-for="LastName" for="defaultFormControlInput" class="form-label">Kullanıcı Soyismi</label>
								<input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Kullanıcı Soyismini giriniz" aria-describedby="defaultFormControlHelp">

							</div>
							<div class="form-group">
								<label asp-for="Email" for="defaultFormControlInput" class="form-label">Kullanıcı Email Adresi</label>
								<input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Kullanıcı Email adresi giriniz" aria-describedby="defaultFormControlHelp">

							</div>
							<div class="form-group">
								<label asp-for="PhoneNumber" for="defaultFormControlInput" class="form-label">Kullanıcı Telefon Numarası</label>
								<input asp-for="PhoneNumber" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Kullanıcı telefon numarası giriniz" aria-describedby="defaultFormControlHelp">

							</div>
							<div class="form-group">
								<label asp-for="RoleId" for="defaultFormControlInput" class="form-label">Kullanıcı Rolü</label>
								<select name="RoleId" class="form-control mb-3">
									@foreach (var item in Model.Roles)
									{
										<option value=@item.Id>@item.Name</option>
									}
								</select>

							</div>

							<div class="form-group">
								<label asp-for="Password" for="defaultFormControlInput" class="form-label">Kullanıcı Parolası</label>
								<input asp-for="Password" type="password" class="form-control mb-3" id="defaultFormControlInput" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7" aria-describedby="defaultFormControlHelp">
								<!-- &#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7 bu kısım parola kısmında silik bir şekilde nokta nokta gözükmesi için yapıldı -->

							</div>



						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary btn-block">Kaydet</button>
						</div>
					</form>

				</div>

			</div>

		</div>
	</div>
</div>
